<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.fourthwardcoder.popularmovies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.fourthwardcoder.popularmovies.PopularMoviesMainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.fourthwardcoder.popularmovies.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName="com.android.fourthwardcoder.popularmovies.PopularMoviesMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.fourthwardcoder.popularmovies.PopularMoviesMainActivity" />
        </activity>
        <activity
            android:name="com.android.fourthwardcoder.popularmovies.ActorDetailActivity"
            android:label="@string/title_activity_actor_detail" >
        </activity>
        <activity
            android:name="com.android.fourthwardcoder.popularmovies.MovieReviewsActivity"
            android:label="@string/title_activity_movie_reviews" >
        </activity>
    </application>

</manifest>