<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTabs</item>
        <item name="actionBarTabBarStyle">@style/MyActionBarTabs</item> -->
    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:background">@color/appPrimaryColor</item>
        <item name="background">@color/appPrimaryColor</item>
        <item name="backgroundStacked">@color/appPrimaryColor</item>


    </style>

    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <item name="background">@drawable/actionbar_tab_indicator</item>
    </style>
    <color name="material_teal">#009688</color>
    <color name="material_text_white">#ffffff</color>

    <style name="headerTextView">
        <item name="android:gravity">left</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="headerLinkTextView">
        <item name="android:gravity">left</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/link_text_material_light</item>
    </style>

    <style name="detailLayoutSection">
        <item name="android:background">#ffffff</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
</resources>
