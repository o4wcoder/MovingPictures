<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/top_toolbar_gradient"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:fitsSystemWindows="true"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/person_photo_bottom_panel"
        android:background="@drawable/bottom_toolbar_gradient">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_photo_share_button"
            android:padding="16dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="?android:selectableItemBackground"
            android:drawableTop="@drawable/ic_share_white"
            android:text="@string/action_share"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:gravity="center"/>
    </FrameLayout>
</FrameLayout>