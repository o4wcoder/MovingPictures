<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/volumeStartImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="0"
        android:padding="16dp"
        android:src="@drawable/ic_action_play_over_video" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:alpha="@string/primary_text_alpha_dark"
        android:padding="2dp"
        android:textSize="20dp"
        android:textColor="@color/link_text_material_light"
        android:id="@+id/videoNameTextView" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:alpha="@string/secondary_text_alpha_dark"
        android:padding="2dp"
        android:id="@+id/videoInfoTextView" />
    </LinearLayout>
</LinearLayout>
