<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/cast_thumb_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/movie_thumbnail"/>

    <TextView
        android:id="@+id/cast_thumb_text_view"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/cast_thumb_image_view"
        android:layout_alignRight="@id/cast_thumb_image_view"
        android:layout_below="@+id/cast_thumb_image_view"
        android:alpha="@string/secondary_text_alpha_dark"
        android:padding="2dp"
        android:gravity="center"
        android:text="Unknown"/>

</RelativeLayout>